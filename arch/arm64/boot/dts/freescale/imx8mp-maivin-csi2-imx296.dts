/dts-v1/;
/plugin/;

/ {
	fragment@0 {
		target = <&i2c2>;
		__overlay__ {
			vc_ctrl: controller@10 {
				compatible = "vision-components,mipi-module";
				reg = <0x10>;
				#clock-cells = <0>;
				vcc-supply = <&csi_3v3>;
				clock-frequency = <54000000>;
			};

			camera@1a {
				compatible = "sony,imx296ll";
				reg = <0x1a>;

				clocks = <&vc_ctrl>;
				clock-names = "inck";

				vddd-supply = <&vc_ctrl>;

				orientation = <1>;	/* Back */
				rotation = <0>;

				port {
					imx296_out: endpoint {
						data-lanes = <1>;
						remote-endpoint = <&mipi_csi1_ep>;
					};
				};
			};
		};
	};

	fragment@1 {
		target = <&isi_0>;
		__overlay__ {
			status = "okay";
		};
	};

	fragment@2 {
		target = <&mipi_csi_1>;
		__overlay__ {
			status = "okay";

			ports {
				port@0 {
					mipi_csi1_ep: endpoint {
						remote-endpoint = <&imx296_out>;
						data-lanes = <1>;
					};
				};
			};
		};
	};
};
